---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());

const last_posts = posts.slice(0, 3);
---

<BaseLayout sideBarActiveItemID="home">
  <div class="pb-12 mt-5">
    <div class="text-xl py-1">Hey there ðŸ‘‹</div>
    <div class="text-5xl font-bold">I'm Henry Cabral</div>
    <div class="text-3xl py-3 font-bold">Creative Product Engineer</div>
    <div class="py-2">
      <text class="text-lg">
        I'm a Biomedical Engineer with over five years of experience conceptualizing machine builds, products, fixtures, and minimal viable products to expand individuals, creators and companies' need to impact!
      </text>
    <div class="py-2">
      <text class="text-lg">
        As a designer, I strive to bring complex ideas into reality through the use of Computer Aid Design and Additive Manufacturing technologies.
      </text>
    </div>
    <div>
      <text class="text-lg">
        I've included in this portfolio a collection of selected projects and experiences to better guide you on my skills, interests, and strong-suits. Feel free to connect with me!
      </text>
    </div>
    <div class="mt-8">
      <a class="btn" href="mailto:henry@enableu.ai" target="_blank"> Let's connect!</a>
    </div>
  </div>

  <div>
    <div class="text-3xl w-full font-bold mb-2">Latest Projects</div>
  </div>

  <HorizontalCard
    title="Ferrule Assembly"
    img="/projects-ferrule-001.png"
    desc="Design of a Ferrule Assembly with Ball Lens."
    badge="LATEST"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="HydraPulse Massager 2.0"
    img="/projects-neon-002.png"
    desc="Medical device used to alleviate muscle fatigue from long moments of standing during orthopedic surgeries. Upstart Product Development, LLC."
    badge="Medical Device"
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title="Multi-component dosage form"
    img="/projects-dosage-004.png"
    desc="A method and system of forming a pharmaceutical dosage form within a portion of a blister packaging. The method includes the steps of providing a blister packaging for the dosage form with depressions. Aprecia Pharmaceuticals, LLC."
    badge="Pharmaceutical"
  />

  <div>
    <div class="text-3xl w-full font-bold mb-5 mt-10">Writing Oasis</div>
  </div>

  {
    last_posts.map((post) => (
      <>
        <HorizontalCard
          title={post.data.title}
          img={post.data.heroImage}
          desc={post.data.description}
          url={"/blog/" + post.slug}
          target="_self"
          badge={post.data.badge}
        />
        <div class="divider my-0" />
      </>
    ))
  }
</BaseLayout>
